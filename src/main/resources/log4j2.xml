<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG" strict="true">
  <Properties>
  	<Property name="root">logs/logger.log</Property>
    <Property name="filename1">logs/package1.log</Property>
    <Property name="filename2">logs/package2.log</Property>
  </Properties>
 
  <Appenders>
    <Appender type="File" name="rootLogger" fileName="${root}">
        <Layout type="PatternLayout" pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %c{1}:%L - %m%n" />
    </Appender>
    <Appender type="File" name="package1" fileName="${filename1}">
        <Layout type="PatternLayout" pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %c{1}:%L - %m%n" />
    </Appender>
    <Appender type="File" name="package2" fileName="${filename2}">
        <Layout type="PatternLayout" pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %c{1}:%L - %m%n" />
    </Appender>
  </Appenders>
 
  <Loggers>
    <Logger name="com.springboot.example" level="debug" additivity="false">
      <AppenderRef ref="package1"/>
    </Logger>
 
    <Logger name="com.springboot.example.controller" level="debug" additivity="true">
      <AppenderRef ref="package2"/>
    </Logger>
 
    <Root level="INFO">
      <AppenderRef ref="rootLogger"/>
    </Root>
  </Loggers>
 
</Configuration>